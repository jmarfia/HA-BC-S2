<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col-6">

          <% articulos.forEach(element => { %>
            <div class="border rounded">
              <div class="h4"><%- element.titulo %> - Articulo nro: <%- element.idarticulos %></div>
              <div class="text-muted"><%- element.contenido.substring(0,150) %>... <a href="/articulo?articuloID=<%- element.idarticulos %>">ver articulo completo</a> </div>
              <img src="<%- element.avatar %>" alt="" width="200" height="200">
              <div>Autor: <%- element.first_name %> <%- element.last_name %></div>
              <div>Email: <%- element.email %></div>
            </div>
            <% }) %>

        </div>
        <div class="col-6">
          <div class="row">



          </div>
        </div>
      </div>
    </div>
  </body>
</html>
