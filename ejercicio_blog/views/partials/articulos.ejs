<div class="container">
  <% articulos.forEach(element => { %>
  <div class="row border rounded m-1 p-3">
    <div class="col-4">
      <div class="titleArticulo">
        <%- element.titulo %> - Articulo nro: <%- element.idarticulos %>
      </div>
      <div class="autor">
        Autor: <%- element.first_name %> <%- element.last_name %>
      </div>
      <div class="mailAutor">Email: <%- element.email %></div>
    </div>
    <div class="col-5">
      <div class="contenido">
        <%- element.contenido.substring(0,150) %>...
        <a href="/articulo?articuloID=<%- element.idarticulos %>"
          >ver articulo completo</a
        >
      </div>
    </div>
    <div class="col-3 d-flex justify-content-center align-items-center">
      <img
        clas="img-thumbnail"
        src="<%- element.avatar %>"
        alt=""
        width="200"
        height="200"
      />
    </div>
  </div>
  <% }) %>
</div>
