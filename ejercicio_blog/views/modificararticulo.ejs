<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <%- include("partials/navbar") %>
    <div class="container mt-5">
      <div class="row border rounded p-3">
        <div class="col-9">
          
          <div class="">
            <div class="h4">
              <%- articulo[0].titulo %> - Articulo nro: <%- articulo[0].idarticulos %>
            </div>
            <form action="/setarticulo" method="GET">
            <textarea id="articulomodificado" name="articulomodificado" class="text-muted form-control"><%- articulo[0].contenido %></textarea>
            <input type="text" class="d-none" name="articuloID" id="articuloID" value=<%- articulo[0].idarticulos %>>

            <div>Autor: <%- articulo[0].first_name %> <%- articulo[0].last_name %></div>
            <div>Email: <%- articulo[0].email %></div>
          </div>
        </div>
        <div class="col-3 d-flex justify-content-center align-items-center">
          <img
            class="img-thumbnail"
            src="<%- articulo[0].avatar %>"
            alt=""
            width="200"
            height="200"
          />
        </div>
<button type="submit" class="btn btn-warning">Guardar cambios</button></form>
      </div>
      <div class="h5">Comentarios
      <% articulo.forEach(comentario => { %>
        <div class="row border rounded ml-1 pl-3 small"><%- comentario.comentario %> </div>
       <% }) %>
    </div>
  </div>



  </body>
</html>
