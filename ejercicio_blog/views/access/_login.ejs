<main>
  <div class="container  login--container">
    <section class="login card">
      <div class="login__header card-header">
        <h2 class="login__title text-center">
          INGRESAR
        </h2>
      </div>

      <div class="login__body card-body">
        <form method="POST" action="/ingresar" class="login__form p-2 mb-3">
          <div class="form-group">
            <label class="sr-only" for="email">
              Email
            </label>

            <div class="input-group">
              <span class="input-group-prepend">
                <span class="input-group-text fas fa-envelope"></span>
              </span>

              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                aria-describedby="email"
                placeholder="Email"
                autofocus
                required
              />
            </div>
          </div>

          <div class="form-group">
            <label class="sr-only" for="email">
              Contraseña
            </label>

            <div class="input-group">
              <span class="input-group-prepend">
                <span class="input-group-text fas fa-lock"></span>
              </span>

              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Contraseña"
                required
              />
            </div>
          </div>

          <div
            class="form-check form-check-inline d-flex justify-content-center py-2 mb-3"
          >
            <input
              class="form-check-input"
              id="ckbRemember"
              type="checkbox"
              name="remember"
              value="remember"
            />

            <label class="form-check-label" for="ckbRemember">
              Recordarme
            </label>
          </div>

          <button type="submit" class="btn btn-lg btn-success w-100">
            INGRESAR
          </button>
        </form>

        <div class="w-100 mb-2 text-center">
          <span class="">
            O ingresa con
          </span>
        </div>

        <div class="social-login d-flex justify-content-around">
          <a href="#" class="btn btn--facebook">
            <span class="fab fa-facebook-f text-primary"></span>
            Facebook
          </a>

          <a href="#" class="btn btn--google">
            <img
              src="/../public/img/icons/icon-google.png"
              width="15"
              alt="Google"
            />
            Google
          </a>
        </div>
      </div>

      <div class="login__footer card-footer text-center">
        <span class="">
          ¿No estás registrado?
        </span>

        <a class="" href="/registro">
          ¡Únete ahora!
        </a>
      </div>
    </section>
  </div>
</main>
