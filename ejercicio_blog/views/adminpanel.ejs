            <a class="btn btn-warning"
              href="/modificararticulo?articuloID=<%- element.id %>"> Editar </a>
            <a class="btn btn-danger" href="/borrararticulo?articuloID=<%- element.id %>">
              Borrar
            </a>
          </div>
        </div>

      </div>
      <div class="col-1"></div>
    </div>
