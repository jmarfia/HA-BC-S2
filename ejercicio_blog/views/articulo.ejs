<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <div class="container mt-5">
        <div class="row border rounded p-3">
          <div class="col-9">
  
            <% articulo.forEach(element => { %>
              <div class="">
                <div class="h4"><%- element.titulo %> - Articulo nro: <%- element.idarticulos %></div>
                <div class="text-muted"><%- element.contenido %> </div>
                
                <div>Autor: <%- element.first_name %> <%- element.last_name %></div>
                <div>Email: <%- element.email %></div>
              </div>
            </div>  
            <div class="col-3 d-flex justify-content-center align-items-center"><img class="img-thumbnail" src="<%- element.avatar %>" alt="" width="200" height="200"></div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
